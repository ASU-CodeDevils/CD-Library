  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm eslint packages/ --resolve-plugins-relative-to .",
    "lint:fix": "pnpm lint --fix",
    "prettify": "pnpm prettier --write packages/"
