      "stable": "*",
      "svgo": "*",
      "source-map-resolve": "*",
      "rollup-plugin-terser": "*",
      "querystring": "*",
      "chokidar": "*",
      "sourcemap-codec": "*",
      "fsevents": "*",
      "source-map-url": "*",
      "resolve-url": "*",
      "urix": "*",
      "w3c-hr-time": "*"
    }
  }
